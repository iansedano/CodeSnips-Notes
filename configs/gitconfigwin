[user]
	email = iansedano@gmail.com
	name = Ian Currie

[alias]
	pushall = "!f() { git add -A && git commit -m \"$@\" && git push; }; f"
  cm = "!f() { git commit -m \"$@\"; }; f"
	commall = "!f() { git add -A && git commit -m \"$@\"; }; f"
	amendpush = "!f() { git add -A && git commit --amend --no-edit && git push -f; }; f"
	ll = log -10 --graph --decorate --oneline
	last = log -3
	s = status
[safe]
	directory = *
[core]
	autocrlf = input
[init]
	defaultBranch = main
